<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_background"
    android:orientation="vertical">

    <ru.gidline.app.screen.main.view.HeaderLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ru.gidline.app.screen.main.view.MenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:text="@string/menu_summary" />

    <ru.gidline.app.screen.main.view.MenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:text="@string/menu_subscriptions" />

    <ru.gidline.app.screen.main.view.MenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:text="@string/menu_documents" />

    <ru.gidline.app.screen.main.view.MenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:text="@string/menu_money" />

    <ru.gidline.app.screen.main.view.MenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:text="@string/menu_invite" />

    <ru.gidline.app.screen.main.view.MenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:text="@string/menu_questions" />

    <ru.gidline.app.screen.main.view.MenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:text="@string/menu_exit" />

</LinearLayout>
