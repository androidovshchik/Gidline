<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ru.gidline.app.screen.categories.CategoryLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/people"
            app:text="Поиск работы"/>

        <ru.gidline.app.screen.categories.CategoryLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/airplane"
            app:text="Покупка билетов"/>

        <ru.gidline.app.screen.categories.CategoryLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/globe"
            app:text="Проверка документов"/>

        <ru.gidline.app.screen.categories.CategoryLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/certificate"
            app:text="Сертификаты"/>

        <ru.gidline.app.screen.categories.CategoryLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/law"
            app:text="Помощь юриста"/>

    </LinearLayout>

</ScrollView>